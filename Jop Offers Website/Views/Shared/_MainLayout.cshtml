<!DOCTYPE html>
<html>
<head>
    <!---//لجعل التطبيق رسبونسف يعمل علي الموبيل---->
    <meta name="viewport" content="width=device-width ,initial scale=1" />
    <title>@ViewBag.Title</title>
    <link href="../Uploads/favicon.ico" rel="shortcut icon" type="image/x-icon">
    \    <!----/ملفات ال cssلتنسيق الصفحه---->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />

</head>

<body>

    <!----Navbar---->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle collapsed" data-toggle="collapse"
                        data-target="#navbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/Home" class="navbar-brand">
                    <img src="~/images/logo.png" class="img-circle logo-size" />
                </a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class=" nav navbar-nav">
                    <li>
                        <a href="~/Home">
                            <i class="glyphicon glyphicon-home"></i>
                            الرئيسية
                        </a>
                    </li>

                    <li>
                        <a href="~/Home/About">
                            <i class="glyphicon glyphicon-info-sign"></i>
                            حول الموقع
                        </a>
                    </li>
                    <li>
                        <a href="~/Home/Contact">
                            <i class="glyphicon glyphicon-envelope"></i>
                            اتصل بنا
                        </a>
                    </li>
                    <li>
                        @using (Html.BeginForm("Search", "Home", FormMethod.Post))
                        {
                            <input type="text" name="searchName" id="searchName"
                                   placeholder="..ابحث هنا" />

                        }

                    </li>
                </ul>
                <!--partial Login-->
                @Html.Partial("_Login")
            </div>
        </div>
    </nav>


    <div class="container">
        <div class="row " style="min-height:450px;">
            @RenderBody()
        </div>

    </div>


    <!----Fotter---->
    <footer class="myfooter">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h3>
                        <i class="glyphicon glyphicon-question-sign"></i>
                        من نحن؟
                    </h3>
                    <p>

                    </p>
                </div>

                <div class="col-md-4">
                    <h3>
                        <i class="glyphicon glyphicon-globe"></i>
                        روابط هامه
                    </h3>
                    <ul>
                        <li><a href="#">وظائف للقطاع العام</a></li>
                        <li><a href="#">وظائف للقطاع الخاص</a></li>
                        <li><a href="#">وظائف خارج البلاد</a></li>
                        <li><a href="#">وظائف متنوعه </a></li>
                    </ul>
                </div>

                <div class="col-md-4">
                    <h3>
                        <i class="glyphicon glyphicon-envelope"></i>
                        تواصل معنا
                    </h3>
                    <ul>
                        <li><a href="#">صفحتنا علي فيس بوك</a></li>
                        <li><a href="#">تابعنا علي تويتر </a></li>
                        <li><a href="#">شاهدنا علي يوتيوب</a></li>
                        <li><a href="#">اترك لنا رساله</a></li>
                    </ul>
                </div>
            </div>

        </div>
        <div class="subfooter">
            <span>جميع الحقوق محفوظة لموقعنا - 2021</span>
        </div>
    </footer>

    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>
